<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jinyafu.jmall.mapper.third.system.RoleMenuMapper">

    <insert id="insertRoleMenu" parameterType="com.jinyafu.jmall.entity.third.system.RoleMenu">
        <selectKey keyProperty="id" resultType="String" order="BEFORE">
            select replace(uuid(),'-','') as id
        </selectKey>
        insert into role_menu
        (
        id,
        roleId,
        menuId,
        createTime
        )
        values
        (
        #{id},
        #{roleId},
        #{menuId},
        now()
        )
    </insert>

    <select id="getRoleMenuListByRoleId" parameterType="string" resultType="com.jinyafu.jmall.entity.third.system.RoleMenu">
        select * from role_menu where roleId = #{roleId}
    </select>


    <delete id="delete" parameterType="string">
        delete from role_menu where id = #{id}
    </delete>

    <delete id="deleteByRoleId" parameterType="string">
        delete from role_menu where roleId = #{roleId}
    </delete>

</mapper>
