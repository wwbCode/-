<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jinyafu.jmall.mapper.third.system.UserRoleInfoMapper">

    <select id="getUserRoleInfoListByUserIdList" resultType="com.jinyafu.jmall.entity.data.system.UserRoleInfo">
        select
        mar.* ,
        r.name roleName
        from user_role mar
        left join role r on r.id=mar.roleId
        where 1=1
        <if test="userIdList!=null and userIdList.size() > 0">
            and mar.userId in
            <foreach item="item" index="index" collection="userIdList"  open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
    </select>
</mapper>