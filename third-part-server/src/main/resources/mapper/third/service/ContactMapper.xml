<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jinyafu.jmall.mapper.third.service.ContactMapper">

    <select id="queryList" parameterType="com.jinyafu.jmall.entity.data.service.ContactDTO" resultType="map">
        select * from s_contact
        <where>
            <if test="data.name != null and data.name != ''">and name like "%"#{data.name}"%"</if>
        </where>
    </select>

    <select id="list" resultType="map">
        select * from s_contact
    </select>

    <select id="get" parameterType="string" resultType="com.jinyafu.jmall.entity.third.service.Contact">
        select * from s_contact where id = #{id}
    </select>
    
    <insert id="insertContact" parameterType="com.jinyafu.jmall.entity.third.service.Contact">
        <selectKey keyProperty="id" resultType="String" order="BEFORE">
            select replace(uuid(),'-','') as id
        </selectKey>

        insert into s_contact
        (
        id,
        supplier,
        name,
        position,
        phone,
        fixedLine,
        mail,
        weChat,
        qq,
        address,
        remark
        )
        values
        (
        #{id},
        #{supplier},
        #{name},
        #{position},
        #{phone},
        #{fixedLine},
        #{mail},
        #{weChat},
        #{qq},
        #{address},
        #{remark}
        )
    </insert>

    <update id="update" parameterType="com.jinyafu.jmall.entity.third.service.Contact">
        update s_contact
        set
        supplier = #{supplier},
        name = #{name},
        position = #{position},
        phone = #{phone},
        fixedLine = #{fixedLine},
        mail = #{mail},
        weChat = #{weChat},
        qq = #{qq},
        address = #{address},
        remark = #{remark}
        where id = #{id}
    </update>

    <delete id="delete" parameterType="string">
        delete from s_contact where id = #{id}
    </delete>
</mapper>